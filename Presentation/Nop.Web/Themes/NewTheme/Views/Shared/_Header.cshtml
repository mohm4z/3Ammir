<div class="header">
    @await Component.InvokeAsync("Widget", new { widgetZone = "header_before" })


    <style>
        .Myheadrlinkresp {
        }

            .Myheadrlinkresp .Myhedercontact {
                text-align: center;
            }

            .Myheadrlinkresp .Myheadrlinks {
                text-align: center;
            }
    </style>

    <div class="header-upper">
        <div class="row Myheadrlinkresp">
            <div class="col-xs-12 col-sm-12 col-md-5 col-lg-5">
                <div class="col-xs-12 col-sm-12 col-md-6 col-lg-6 Myheader-links-wrapper Myhedercontact ">
                    <div>
                        <img src="~/Themes/NewTheme/Content/images/tlicon.png" class="Mylinkflo" />
                        <p class="Mylinkflo">+966-555-3AMMIR</p>
                    </div>
                </div>

                <div class=" col-xs-12 col-sm-12 col-md-6 col-lg-6 Myheader-links-wrapper Myhedercontact ">
                    <div>
                        <img src="~/Themes/NewTheme/Content/images/msicon.png" class="Mylinkflo" />
                        <p class="Mylinkflo">contact@3ammir.com</p>
                    </div>
                </div>
            </div>

            <div class="col-xs-12 col-sm-12 col-md-7 col-lg-7 Myheadrlinks">
                <div class="header-links-wrapper">
                    @await Component.InvokeAsync("HeaderLinks")
                    @await Component.InvokeAsync("FlyoutShoppingCart")
                </div>
            </div>
        </div>

        <div class="header-selectors-wrapper">
            @await Component.InvokeAsync("TaxTypeSelector")
            @*@await Component.InvokeAsync("CurrencySelector")
                @await Component.InvokeAsync("LanguageSelector")*@
            @await Component.InvokeAsync("Widget", new { widgetZone = "header_selectors" })
        </div>
    </div>

    @await Component.InvokeAsync("Widget", new { widgetZone = "header_middle" })

    @*<div class="header-lower">
            <div class="header-logo">
                @await Component.InvokeAsync("Logo")
            </div>
            <div class="search-box store-search-box">
                @await Component.InvokeAsync("SearchBox")
            </div>
        </div>*@

    @await Component.InvokeAsync("Widget", new { widgetZone = "header_after" })
</div>
